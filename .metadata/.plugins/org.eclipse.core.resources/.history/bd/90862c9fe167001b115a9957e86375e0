package CustomerSimulator.controller;

import CustomerSimulator.models.Store;

public class StoreOpen {
	private Store store;
	private double arrivedTime = 0;
	
	public StoreOpen(Store store) {
		this.store = store;
	}
	
	public void run() {
		while(arrivedTime < store.getMaxTime()) {
			arrivedTime += store.getNextArrived();
			System.out.println("New customer arrived at: "+arrivedTime);
		}
	}
}
